{
  "name": "taskbar.fm",
  "version": "1.6.2",
  "description": "Taskbar like windows for mac",
  "main": "./out/main/index.js",
  "author": "FruitRiin",
  "homepage": "https://www.electronjs.org",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts,.vue --fix",
    "typecheck:node": "# tsc --noEmit -p src/main/tsconfig.node.json --composite false",
    "typecheck:web": "# vue-tsc --noEmit -p src/renderer/tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "helper": "swiftc src/native/helper.swift -target arm64-apple-macosx14.0 -o resources/arm_TaskbarHelper ; swiftc src/native/helper.swift -target x86_64-apple-macosx14.0 -o resources/x86_TaskbarHelper ; lipo -create resources/x86_TaskbarHelper resources/arm_TaskbarHelper -output resources/TaskbarHelper; rm resources/x86_TaskbarHelper resources/arm_TaskbarHelper",
    "build": "npm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:win": "npm run build && electron-builder --win --config",
    "build:mac": "npm run build && electron-builder --mac; npm run build && electron-builder --mac --x64",
    "build:linux": "npm run build && electron-builder --linux --config",
    "afterSign": "scripts/notarize.js",
    "install-app": "rm -rf /Applications/taskbar.fm.app && cp -a dist/mac-universal/taskbar.fm.app /Applications/taskbar.fm.app"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^2.0.0",
    "@electron-toolkit/utils": "^2.0.1",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "bulma": "^0.9.4",
    "electron-updater": "^6.1.4",
    "eslint-plugin-vue": "^9.18.1",
    "fast-sort": "^3.4.0",
    "less": "^4.2.0",
    "pinia": "^2.1.7",
    "sass": "^1.69.5",
    "vue-router": "^4.2.5",
    "vuedraggable": "^4.1.0"
  },
  "devDependencies": {
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@electron/notarize": "^2.1.0",
    "@rushstack/eslint-patch": "^1.5.1",
    "@types/node": "20.9.0",
    "@vitejs/plugin-vue": "^4.4.1",
    "dotenv": "^16.3.1",
    "electron": "^27.0.4",
    "electron-builder": "^24.6.4",
    "electron-store": "^8.1.0",
    "electron-vite": "^1.0.28",
    "eslint": "^8.53.0",
    "html-escaper": "^3.0.3",
    "just-diff": "^6.0.2",
    "just-diff-apply": "^5.5.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2",
    "unplugin-vue-router": "^0.7.0",
    "vite": "^4.5.0",
    "vue": "^3.3.8",
    "vue-tsc": "^1.8.22"
  }
}
